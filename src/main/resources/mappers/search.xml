<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koreait.restaurant.repository.SearchRepository">

    <select id="searchReserve"
            parameterType="com.koreait.restaurant.web.dto.SearchReserveReqDto"
            resultType="com.koreait.restaurant.entity.DinningMst">
            select
                reserve_id as reserveId,
                reserve_name as reserveName,
                reserve_date as reserveDate,
                reserve_time as reserveTime,
                number,
                email,
                adult,
                child,
                guest,
                request
            from
                dinning_mst
            where
                reserve_id = #{reserveId}
    </select>

    <insert id="saveReserveCheck" parameterType="com.koreait.restaurant.entity.DinningMst"
            useGeneratedKeys="true" keyProperty="reserveId">
        insert into dinning_mst
        values
            (0, #{reserveId}, #{reserveName}, #{reserveDate}, #{reserveTime}, #{number}, #{email}, #{adult}, #{child}, #{guest}, #{request})
    </insert>


</mapper>